# external monitor controls
bindsym $sup+h move workspace to output left
bindsym $sup+l move workspace to output right
bindsym $sup+u exec xrandr --output HDMI1 --auto --left-of eDP1
bindsym $sup+i exec xrandr --output HDMI1 --auto --right-of eDP1
bindsym $sup+k exec xrandr --output DP2-2 --off --output HDMI1 --off

bindsym Print --release  exec scrot '%Y-%m-%d_$wx$h.png' -e 'mv $f /home/srang/Pictures/screenshots/'
bindsym Shift+Print --release exec scrot -s '%Y-%m-%d_$wx$h.png' -e 'mv $f /home/srang/Pictures/screenshots/'

# lock screen
bindsym $sup+Shift+l exec xscreensaver-command -l
bindsym $sup+Scroll_Lock exec xscreensaver-command -l
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r exec "xrdb ~/.Xresources"; restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize grow width 3 px or 3 ppt
        bindsym j resize grow height 3 px or 3 ppt
        bindsym k resize shrink height 3 px or 3 ppt
        bindsym l resize shrink width 3 px or 3 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
        bindsym $mod+j mode "default"; focus down
        bindsym $mod+k mode "default"; focus up
        bindsym $mod+h mode "default"; focus left
        bindsym $mod+l mode "default"; focus right
}

bindsym $mod+r mode "resize"

